<MyGridLayout>

    login:login
    password:password
    sz_nr:sz_nr

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text: "Login"
            TextInput:
                id: login
                multiline:False
                font_size: 32

            Label:
                text: "Password"
            TextInput:
                id: password
                multiline:False
                password: True
                font_size: 32

            Label:
                text: "Numerek"
            TextInput:
                id: sz_nr
                multiline:False
                font_size: 32

        Button:
            text: "Submit"
            font_size: 64
            on_press: root.press()
            pos_hint
