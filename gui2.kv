<MyGridLayout>

    login:login
    password:password
    sz_nr:sz_nr


    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        BoxLayout:
            orientation: "horizontal"
            size: root.width, root.height

            BoxLayout:
                orientation: "vertical"
                padding: 50
                spacing: 20
                BoxLayout:
                    orientation: "horizontal"
                    pos_hint: {'center_x': 0.5}
                    size_hint: ( None , None )
                    width: root.width
                    height: 50
                    orientation: "horizontal"

                    Label:
                        text: "Login"

                    TextInput:
                        id: login
                        multiline:False
                        font_size: 32
                        foreground_color: (0.3, 0.4, 0.5, 1)
                        backgound_normal: ''



                BoxLayout:

                    orientation: "horizontal"
                    pos_hint: {'center_x': 0.5}
                    size_hint: ( None , None )
                    width: root.width
                    height: 50
                    orientation: "horizontal"

                    Label:
                        text: "Password"
                    TextInput:
                        id: password
                        multiline:False
                        password: True
                        font_size: 32

                BoxLayout:

                    orientation: "horizontal"
                    pos_hint: {'center_x': 0.5}
                    size_hint: ( None , None )
                    width: root.width
                    height: 50

                    Label:
                        text: "Numerek"
                    TextInput:
                        id: sz_nr
                        multiline:False
                        font_size: 32


        RoundedButton:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            pos_hint: {'center_x': 0.75}
            size_hint: ( 0.5, 0.2 )

        Label:
            id: nie
            font_size: 10

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (50/255,50/255,50/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30]
